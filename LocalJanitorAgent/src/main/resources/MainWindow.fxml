<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.niroshan.localjanitoragent.Gui.MainWindowController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label text="Working Dir:" />
                  <TextField fx:id="pathField" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#handleBrowse" text="..." />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Goal:" />
                  <TextField fx:id="goalField" promptText="e.g. Delete all png files" HBox.hgrow="ALWAYS" />
                  <Button fx:id="runButton" mnemonicParsing="false" onAction="#handleRun" text="RUN AGENT" styleClass="run-button" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <javafx.scene.control.SplitPane dividerPositions="0.3" BorderPane.alignment="CENTER">
         <items>
            <javafx.scene.control.TreeView fx:id="fileTree" prefHeight="400.0" prefWidth="200.0" />
            <TextArea fx:id="logArea" editable="false" prefHeight="400.0" prefWidth="400.0">
               <font>
                  <javafx.scene.text.Font name="Monospaced Regular" size="12.0" />
               </font>
            </TextArea>
         </items>
      </javafx.scene.control.SplitPane>
   </center>
   <bottom>
      <Label text="Status: Ready" BorderPane.alignment="CENTER_LEFT">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Label>
   </bottom>
</BorderPane>
