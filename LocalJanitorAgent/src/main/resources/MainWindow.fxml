<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.niroshan.localjanitoragent.Gui.MainWindowController" styleClass="root">
   <top>
      <VBox spacing="0" styleClass="top-container">
         <!-- Header Section: Logo & Greeting -->
         <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-section">
            <padding>
               <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
               <!-- Logo Placeholder -->
               <javafx.scene.shape.Circle radius="24.0" styleClass="logo-placeholder" />
               <javafx.scene.layout.Region HBox.hgrow="ALWAYS" />
               <Label fx:id="greetingLabel" text="Good Morning, User" styleClass="greeting-label" />
            </children>
         </HBox>

         <!-- Directory Selection Bar -->
         <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="directory-bar">
             <padding>
                 <Insets bottom="15.0" left="20.0" right="20.0" top="0.0" />
             </padding>
             <children>
                 <Label text="Working Directory:" styleClass="input-label"/>
                 <TextField fx:id="pathField" HBox.hgrow="ALWAYS" promptText="Select working directory..." styleClass="directory-input"/>
                 <Button mnemonicParsing="false" onAction="#handleBrowse" text="Choose Working Directory" styleClass="outline-button"/>
             </children>
         </HBox>
      </VBox>
   </top>

   <center>
      <javafx.scene.control.SplitPane dividerPositions="0.3" styleClass="main-split-pane">
         <!-- Left: File Tree -->
         <items>
            <VBox styleClass="tree-container">
                <children>
                    <Label text="File Tree View" styleClass="section-header">
                        <padding><Insets bottom="10" left="10" top="10"/></padding>
                    </Label>
                    <javafx.scene.control.TreeView fx:id="fileTree" VBox.vgrow="ALWAYS" styleClass="clean-tree-view"/>
                </children>
            </VBox>

            <!-- Right: Content Area -->
            <javafx.scene.control.SplitPane dividerPositions="0.7" orientation="VERTICAL" styleClass="right-split-pane">
               <items>
                  <!-- Top Right: Agent Response / Logs -->
                  <VBox styleClass="response-container">
                      <Label text="AGENT RESPOND PANEL" styleClass="section-header">
                          <padding><Insets bottom="5" left="10" top="10"/></padding>
                      </Label>
                      <TextArea fx:id="logArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" styleClass="clean-log-area"/>
                  </VBox>

                  <!-- Bottom Right: Goal Input -->
                  <VBox spacing="15.0" styleClass="util-container">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <Label text="What you need to do" styleClass="input-label" minWidth="120"/>
                              <TextField fx:id="goalField" promptText="Goal e.g. Organize files by date" HBox.hgrow="ALWAYS" styleClass="goal-input"/>
                              <javafx.scene.control.ComboBox fx:id="quickActionCombo" promptText="Quick Actions" prefWidth="150" styleClass="combo-box"/>
                           </children>
                        </HBox>
                        
                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                             <Label text="&lt;&lt; sample prompt for goals &gt;&gt;" styleClass="hint-text" /> 
                             <javafx.scene.layout.Region HBox.hgrow="ALWAYS" />
                             <Button fx:id="runButton" mnemonicParsing="false" onAction="#handleRun" text="Run Agent" styleClass="run-button" />
                        </HBox>

                        <HBox alignment="CENTER_LEFT" styleClass="status-bar">
                             <Label fx:id="statusLabel" text="Status: Ready" styleClass="status-label"/>
                        </HBox>
                     </children>
                  </VBox>
               </items>
            </javafx.scene.control.SplitPane>
         </items>
      </javafx.scene.control.SplitPane>
   </center>
</BorderPane>
